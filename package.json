{
  "name": "verona-player-testbed",
  "version": "3.0.0-alpha",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build --configuration production --output-hashing=none",
    "postbuild": "node node_modules/iqb-dev-components/src/distpacker.js dist index_packed.html && mv dist/index_packed.html docs/index.html",
    "test": "ng test --watch=false",
    "lint": "ng lint",
    "e2e": "ng e2e --webdriver-update=false"
  },
  "private": true,
  "eslintConfig": {
    "extends": "@iqb/eslint-config",
    "parserOptions": {
      "project": "./tsconfig.base.json"
    },
    "overrides": [
      {
        "files": [
          "e2e-tests/**/*.ts"
        ],
        "rules": {
          "@typescript-eslint/no-unused-expressions": [
            "error",
            {
              "allowTaggedTemplates": true
            }
          ],
          "newline-per-chained-call": [
            "off"
          ]
        }
      }
    ]
  },
  "dependencies": {
    "@angular/animations": "^17.3.12",
    "@angular/cdk": "^17.3.10",
    "@angular/common": "^17.3.12",
    "@angular/compiler": "^17.3.12",
    "@angular/core": "^17.3.12",
    "@angular/forms": "^17.3.12",
    "@angular/material": "^17.3.10",
    "@angular/platform-browser": "^17.3.12",
    "@angular/platform-browser-dynamic": "^17.3.12",
    "@angular/router": "^17.3.12",
    "rxjs": "~7.6.0",
    "tslib": "^2.4.1",
    "zone.js": "~0.14.10"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^17.3.17",
    "@angular/compiler-cli": "^17.3.12",
    "@iqb/eslint-config": "2.1.1",
    "@types/jasminewd2": "~2.0.10",
    "@types/karma": "~6.3.3",
    "@types/karma-jasmine": "~4.0.2",
    "@types/node": "^16.11.68",
    "eslint": "8.25.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-cypress": "^2.10.3",
    "htmlhint": "^0.16.3",
    "iqb-dev-components": "^1.4.1",
    "jasmine-core": "~4.5.0",
    "jasmine-spec-reporter": "~5.0.2",
    "karma": "~6.4.1",
    "karma-chrome-launcher": "~3.1.1",
    "karma-coverage-istanbul-reporter": "~3.0.3",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "^2.0.0",
    "protractor": "~7.0.0",
    "ts-node": "~9.0.0",
    "typescript": "^5.4.5"
  }
}